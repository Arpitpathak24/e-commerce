<%- include('partials/header', { title: 'Home' }) %>

<!-- Hero Banner -->
<section class="hero text-white text-center d-flex align-items-center justify-content-center">
  <div data-aos="fade-down">
    <h1 class="display-4 fw-bold">Discover Amazing Products</h1>
    <p class="lead">High quality. Great prices. Delivered fast.</p>
    <a href="/shop" class="btn btn-warning btn-lg mt-3">Explore Shop</a>
  </div>
</section>

<!-- Featured Categories -->
<section class="bg-light py-5">
  <div class="container text-center" data-aos="fade-up">
    <h2 class="mb-4">Browse Categories</h2>
    <div class="row g-4">
      <div class="col-md-4" data-aos="flip-left"><div class="p-4 shadow rounded bg-white">👚 Clothing</div></div>
      <div class="col-md-4" data-aos="flip-up"><div class="p-4 shadow rounded bg-white">📱 Electronics</div></div>
      <div class="col-md-4" data-aos="flip-right"><div class="p-4 shadow rounded bg-white">🏠 Home Goods</div></div>
    </div>
  </div>
</section>

<!-- Featured Products -->
<section class="py-5" style="background: linear-gradient(to right, #ffecd2 0%, #fcb69f 100%)">
  <div class="container text-center" data-aos="fade-up">
    <h2 class="text-dark mb-5">Top Picks</h2>
    <div class="row">
      <% for(let i=1; i<=3; i++) { %>
        <div class="col-md-4 mb-4" data-aos="zoom-in" data-aos-delay="<%= i * 150 %>">
          <div class="card border-0 shadow-lg">
            <img src="/images/sample.jpg" class="card-img-top" alt="Product">
            <div class="card-body">
              <h5 class="card-title text-primary">Product <%= i %></h5>
              <p class="card-text text-dark">₹<%= (i * 10 + 9.99).toFixed(2) %></p>
              <a href="/product/<%= i %>" class="btn btn-outline-dark">View Details</a>
            </div>
          </div>
        </div>
      <% } %>

      <!-- Uncomment this to use dynamic products -->
      <!-- 
      <% topProducts.forEach(product => { %>
        <div class="col-md-4 mb-4" data-aos="zoom-in">
          <div class="card border-0 shadow-lg">
            <img src="<%= product.image %>" class="card-img-top" alt="<%= product.name %>">
            <div class="card-body">
              <h5 class="card-title text-primary"><%= product.name %></h5>
              <p class="card-text text-dark">₹<%= product.price %></p>
              <a href="/product/<%= product._id %>" class="btn btn-outline-dark">View Details</a>
            </div>
          </div>
        </div>
      <% }) %>
      -->
    </div>
  </div>
</section>

<!-- Skin Concern Categories Section -->
<section class="py-5 bg-white">
  <div class="container">
    <h4 class="mb-4 text-center fw-bold">Find the right product for you</h4>
    <div class="row justify-content-center text-center">
      <% skinCategories.forEach(cat => { %>
        <div class="col-3 col-sm-2 mb-4">
          <a href="/category/<%= cat.slug %>" class="text-decoration-none text-dark d-block">
            <div class="rounded-circle overflow-hidden mx-auto category-circle shadow-sm">
              <img src="<%= cat.image %>" alt="<%= cat.name %>" class="img-fluid w-100 h-100 object-fit-cover"/>
            </div>
            <p class="mt-2 small fw-semibold"><%= cat.name %></p>
          </a>
        </div>
      <% }) %>
    </div>
  </div>
</section>

<!-- Testimonials -->
<section class="bg-white py-5">
  <div class="container text-center" data-aos="fade-up">
    <h2 class="mb-4">What Our Customers Say</h2>
    <div class="row g-4">
      <div class="col-md-4"><div class="p-3 bg-light rounded shadow-sm">“Amazing service & fast delivery!” – Anna</div></div>
      <div class="col-md-4"><div class="p-3 bg-light rounded shadow-sm">“Great products at affordable prices.” – James</div></div>
      <div class="col-md-4"><div class="p-3 bg-light rounded shadow-sm">“Will definitely order again!” – Priya</div></div>
    </div>
  </div>
</section>

<!-- Newsletter Signup -->
<section class="text-white text-center py-5" style="background: linear-gradient(90deg, #8360c3, #2ebf91);">
  <div class="container" data-aos="fade-up">
    <h3>Subscribe for Exclusive Deals</h3>
    <form class="row justify-content-center mt-4" method="POST" action="/subscribe">
      <div class="col-md-6">
        <input type="email" name="email" class="form-control" placeholder="Enter your email" required>
      </div>
      <div class="col-md-2">
        <button class="btn btn-light w-100">Subscribe</button>
      </div>
    </form>
  </div>
</section>

<%- include('partials/footer') %>

<!-- AOS Initialization -->
<script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
<script>
  AOS.init({ duration: 800 });
</script>

<style>
  .category-circle {
    width: 70px;
    height: 70px;
    border-radius: 50%;
    border: 2px solid #ddd;
    transition: transform 0.2s ease;
  }
  .category-circle:hover {
    transform: scale(1.05);
    border-color: #0099cc;
  }
  .object-fit-cover {
    object-fit: cover;
  }
</style>
